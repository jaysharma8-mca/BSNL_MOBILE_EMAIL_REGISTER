<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0EBE9"
    tools:context=".SPLASH_SCREEN_ACTIVITY.SplashScreen_Activity">


    <ImageView
        android:id="@+id/image_splash_screen"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:background="@drawable/bsnl_logo"
        android:layout_centerInParent="true"
        android:focusableInTouchMode="false"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/textViewName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/image_splash_screen"
        android:layout_marginTop="10dp"
        android:textAlignment="center"
        android:textSize="25sp"
        android:textStyle="bold"
        android:textColor="#414F4F"
        android:text="@string/app_name"/>

    <TextView
        android:id="@+id/textViewVersion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20sp"
        android:textAlignment="center"
        android:textSize="@dimen/dimen"
        android:textStyle="bold"
        android:textColor="#414F4F"
        android:text="@string/app_version"/>


</RelativeLayout>